{
  "name": "@lvce-editor/import-script",
  "version": "0.0.0-dev",
  "description": "Dynamically import a module with helpful error messages in case the import fails",
  "main": "src/index.js",
  "type": "module",
  "types": "src/index.d.ts",
  "scripts": {
    "test": "node --unhandled-rejections=warn --experimental-vm-modules ./node_modules/jest/bin/jest.js --detectOpenHandles --forceExit",
    "test:watch": "node --unhandled-rejections=warn --experimental-vm-modules ./node_modules/jest/bin/jest.js --watch"
  },
  "keywords": [
    "error"
  ],
  "author": "Lvce Editor",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@types/jest": "^29.5.12",
    "execa": "^8.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "rollup": "^4.13.0",
    "typescript": "^5.4.2"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "jest": {
    "testMatch": [
      "<rootDir>/test/*.test.js"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/"
    ]
  },
  "dependencies": {
    "@babel/parser": "^7.24.0"
  }
}
